rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is accessing their own data
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection
    // Read/Write: Only the owner can read or write their own profile
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Progress collection
    // Read/Write: Only the owner can access their progress
    match /progress/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Lessons collection
    // Read: All authenticated users
    // Write: No one (Admin only via console)
    match /lessons/{lessonId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    // Practice Sessions collection
    // Read/Write: Only the owner can access their sessions
    match /practiceScores/{userId}/sessions/{sessionId} {
      allow read, write: if isOwner(userId);
    }
  }
}
